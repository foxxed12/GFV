{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",

    /*  alias  */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /*  strict-mode можно true; implicitAny нам теперь не страшен  */
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "src/types/**/*.d.ts",
    ".next/types/**/*.ts",
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
